[core]
	autocrlf = input
	safecrlf = warn
	editor = vim
	excludesfile = ~/.gitignore
	pager = less -S

[alias]
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  root = !pwd
  wip = commit -m "wip"
  fixup = commit -m "fixup"
  ctags = !.git/hooks/ctags

[push]
  default = simple

[init]
  templatedir = ~/.git_template

[pull]
  ff = only

[merge]
	tool = meld
[diff]
	tool = vimdiff
[difftoo]
	prompt = false
[difftool]
	prompt = false
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
